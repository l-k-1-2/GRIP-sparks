<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment</title>

    <link rel="stylesheet" href="../Css/payment.css">
    <link rel="stylesheet" href="../Css/Navbar.css">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>

</head>

<body>

  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">My Bank</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav my-2 my-lg-2">

          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/">Home</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/Reciepts">Create Account</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/Sender">Make Payment</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/Reciepts">Transaction History</a>
          </li>

        </ul>
      </div>
    </div>
  </nav>

      
    <div class="container-fluid table">
        <br>
        <h2>Your Info</h2>
        <p class="status"><%= status %></p>
        <div style="overflow-x: auto;">
            <table>
                <th>Customer ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Balance</th>
                <tr>
                    <td><%= sender._id %></td>
                    <td><%= sender.name %></td>
                    <td><%= sender.email%></td>
                    <td><%= sender.balance%></td>
                </tr>
            </table>
        </div>

        <br>
        <h2>Choose a Reciever</h2>
        <form action="/transaction" method="POST" id="post">
            <div style="overflow-x: auto;">
                <table>
                    <th>Customer ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th></th>

                    <% 
            for(var i=0;i<customer.length;i++){
                %>
                    <tr>
                        <td> <%= customer[i]._id %> </td>
                        <td> <%= customer[i].name %> </td>
                        <td> <%= customer[i].email %> </td>
                        <td><input type="radio" name="reciever" value="<%= customer[i]._id %>"
                                id="<%= customer[i]._id %>">
                        </td>
                    </tr>
                    <%
                    } %>
                </table>
            </div>
            <br>
            <div>
                <span>Enter the amount</span>
                <input type="number" id="amount" name="amount">
            </div>
            <br>
        </form>
        <form action="/Sender" method="GET" id="get">
            </form>
    </div>
    <div class="row container-fluid">
        <div class="offset-lg-3 col-lg-1">
            <button type="button" class="back" onclick="Back()">Back</button>
        </div>
        <div class="offset-lg-4 col-lg-2">
            <button type="button" class="next" onclick="Next()">Next</button>
        </div>
    </div>
    <br> <br>
    <script>
        function Back() {
            console.log("Hello ");
            document.getElementById('get').submit();
        }

        function Next() {
            document.getElementById('post').submit();
        }
    </script>
</body>

</html>